<div class="container-fluid">
<div class="h-100 row align-items-center">
    <div class="col-sm-2">
        <div class="card" id="image" style="width: 18rem; margin-right: auto;
        margin-left: auto;">
        <img class="card-img-top" src="/images/<%= game.name %>.jpg" alt="<%= game.name %>Image">
        <div class="card-body">
            <p class="card-text" style="text-align: center; text-transform: uppercase; font-weight: bold;"><%= game.name %></p>
          </div>
        </div>
        
    </div>
    <div class="col-8" style="padding-top: 70px;">
        <div class="card" id="slot" style="width: 18rem; margin-right: auto; margin-left: auto;">
            <div class="card-header" style="text-align: center">
                AVAILABLE SLOTS
            </div>
            <div class="card-body" style="height: 20rem;">
                <!-- <div> -->
                    <form class = "form-container" action = '/timeSlot/<%=id%>/book' method = "POST">
                        <div class="w-100 p-2">
                            <% if(booked.indexOf("slot1") == -1){%>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="slot1" checked>
                                <label class="form-check-label" for="exampleRadios1">
                                    Slot 1
                                </label>
                            </div>
                            <%}else{%>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="slot1" checked>
                                <label class="form-check-label" for="exampleRadios1">
                                    Slot 1
                                </label>
                            </div>
                            <%}%>
                        </div>
                        
                        <div class="w-100 p-2">
                            <% if(booked.indexOf("slot2") == -1){%>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="slot2">
                                    <label class="form-check-label" for="exampleRadios2">
                                        Slot 2
                                    </label>
                                    </div>
                            <%}else{%>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="slot2" disabled>
                                    <label class="form-check-label" for="exampleRadios2">
                                        Slot 2
                                    </label>
                                </div>
                            <%}%>
                        </div>
                        <div class="w-100 p-2"> 
                            <% if(booked.indexOf("slot3") == -1){%>
                                <div class="form-check">
                                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios3" value="slot3">
                                <label class="form-check-label" for="exampleRadios3">
                                    Slot 3
                                </label>
                                </div>
                            <%}else{%>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios3" value="slot3" disabled>
                                    <label class="form-check-label" for="exampleRadios3">
                                        Slot 3
                                    </label>
                                </div>
                            <%}%>
                        </div> 
                        <div class="w-100 p-2"> 
                            <% if(booked.indexOf("slot4") == -1){%>
                                <div class="form-check">
                                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios4" value="slot4">
                                <label class="form-check-label" for="exampleRadios4">
                                    Slot 4
                                </label>
                                </div>
                            <%}else{%>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios4" value="slot4" disabled>
                                    <label class="form-check-label" for="exampleRadios4">
                                        Slot 4
                                    </label>
                                </div>
                            <%}%>
                        </div>
                        <div class="w-100 p-2"> 
                            <% if(booked.indexOf("slot5") == -1){%>
                                <div class="form-check">
                                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios5" value="slot5">
                                <label class="form-check-label" for="exampleRadios5">
                                    Slot 5
                                </label>
                                </div>
                            <%}else{%>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios5" value="slot5" disabled>
                                    <label class="form-check-label" for="exampleRadios5">
                                        Slot 5
                                    </label>
                                    </div>
                            <%}%>
                        </div>
                        <div class="text-center" style="padding-top: 25px;">
                            <button class="btn btn-primary RegisterButton" type="submit">BOOK</button>
                        </div>
                        
                        <br>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
	

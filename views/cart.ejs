<div class = "cart-container" style="padding-top: 50px;">
  <div class="card mb-3 position">
    <div class="row">
      <h1 style="margin-left: auto; margin-right: auto;"> Items in Cart</h1>
    </div>
  </div>
    <% 
    if(cartItems.length > 0){
      console.log('Cart Items after delete : ',cartItems);
    for(let cartItem of cartItems) {%>
        <div class="card mb-3 position">
            <div class="row no-gutters">
              <div class="col-md-1" style="display: flex; justify-content: center;">
                <button class = "btn btn-danger cart-trash" style="width: 40px; 
                margin: 0 auto;">
                  <i class="fa fa-trash"></i>
                </button>
              </div>
              <div class="col-md-3">
                <img src="/images/<%= cartItem.itemid.image %>" class="card-img" alt="...">
              </div>
              <div class="col-md-6 cart-card" >
                <div class="card-body">
                  <div class="row"><label>Name : &nbsp; </label><h5 class="card-title" id="<%= cartItem.itemid._id %>" ><%= cartItem.itemid.name %></h5></div>
                  <div class="row"><label>Description : &nbsp; </label><p class="card-text"><%= cartItem.itemid.description %></p></div>
                  <div class="row"><label>Quantity : &nbsp; </label><p class="card-text"><%= cartItem.quantity %></p></div>
                </div>
              </div>
              <div class="col-md-1" style="display: flex; justify-content: center;">
                <button class = "btn btn-success cart-inc" id="<%= cartItem.itemid._id %>" style="width: 40px; 
                margin: 0 auto;">
                  <i class="fa fa-plus"></i>
                </button>
              </div>
              <div class="col-md-1" style="display: flex; justify-content: center;">
                <button class = "btn btn-warning cart-dec" id="<%= cartItem.itemid._id %>" style="width: 40px; 
                margin: 0 auto;">
                  <i class="fa fa-minus"></i>
                </button>
              </div>
            </div>
          </div>
    <%}}%>

    <div class="card mb-3 position">
    <div class="row">
    <div class="col-md-5"></div>
    <div class="col-md-6">
      <button class = "btn btn-primary cart-check" >
          CHECKOUT
      </button>
    </div>  
    <div class="col-md-3"></div>  
    </div>
    </div>

</div> 


